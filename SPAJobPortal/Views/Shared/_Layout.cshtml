<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Job Portal</title>
    <base href="~/" />
    <link href="https://cdn.quilljs.com/1.2.2/quill.snow.css" rel="stylesheet">
    <link href="https://cdn.quilljs.com/1.2.2/quill.bubble.css" rel="stylesheet">

    <link rel="stylesheet" href="~/dist/vendor.css" asp-append-version="true" />

    <style>
        #loading-message p::before {
            position: absolute;
            top: 40px;
            left: calc(-5em + 16px);
            width: 10em;
            height: 10em;
            padding: 0;
            content: "Loading Application";
            text-align: center;
            font-family: segoe UI, sans-serif;
            font-weight: 200;
            color: #999;
            font-size: 24px;
        }

        div.sm-jumbotron {
            margin: 0px;
            padding: 2rem;
            background-color: #38547b;
            color: #fff;
        }

        button.btn-submit {
            background-color: #38547b;
            color: #fff;
            width: 100%;
        }

            button.btn-submit:focus, button.btn-submit:hover {
                background-color: #38547b;
            }
    </style>
</head>
<body>
    @RenderBody()

    @RenderSection("scripts", required: false)
   
</body>
</html>
